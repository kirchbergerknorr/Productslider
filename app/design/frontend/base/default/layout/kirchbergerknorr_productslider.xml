<layout version="0.1.0">
    <checkout_cart_index>
        <reference name="head">
            <action method="addJs"><script>kirchbergerknorr/productslider/jquery-2.1.3.min.js</script></action>
            <action method="addJs"><script>kirchbergerknorr/productslider/owl.carousel.js</script></action>
            <action method="addCss"><stylesheet>css/kirchbergerknorr/productslider/productslider.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/kirchbergerknorr/productslider/owl.carousel.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/kirchbergerknorr/productslider/owl.theme.css</stylesheet></action>
        </reference>
        <reference name="checkout.cart">
            <block type="kirchbergerknorr_productslider/slider" name="kk_productslider" template="kirchbergerknorr/productslider.phtml" />
        </reference>
    </checkout_cart_index>
</layout>